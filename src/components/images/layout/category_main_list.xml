<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5">

    <RelativeLayout
        android:id="@+id/rl_cat_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="4.2">

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/iv_category"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="false"
            android:padding="5dp"
            android:src="@drawable/ic_type_category_food"/>

        <TextView
            android:id="@+id/tv_category"
            style="@style/SimpleTextDBMomentX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/iv_category"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/iv_category"
            android:textSize="18sp"

            />


    </RelativeLayout>

        <ImageView
            android:id="@+id/arrow_up_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:padding="20dp"
            android:layout_weight=".8"
            android:src="@drawable/arrow_selector_flash_sale"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:background="#E5E5E5"/>

</LinearLayout>