<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="5"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/bg_gray"/>

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/imv_backgrund_profile_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/rl_already_login_facebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imv_profile_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="145dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/tv_setting_facebook_name"
                    style="@style/SimpleTextDBMomentXMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="27sp"
                    />

                <TextView
                    android:id="@+id/tv_setting_shop_name"
                    style="@style/SimpleTextDBMomentXMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/ll_list_user_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_report_review_item"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SimpleTextDBMomentX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:freezesText="true"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"
                                android:text="@string/setting_more_list_review_string"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                />

                            <TextView
                                android:id="@+id/tv_more_total_review"
                                style="@style/SimpleTextDBMomentX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:freezesText="true"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"
                                android:textColor="@color/white"
                                android:textSize="28sp"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_report_coupon"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SimpleTextDBMomentX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:freezesText="true"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"
                                android:text="@string/txt_report_coupon"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                />

                            <TextView
                                style="@style/SimpleTextDBMomentX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:freezesText="true"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"
                                android:textColor="@color/white"
                                android:textSize="28sp"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login_easyjj_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_more"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="80"
                        android:orientation="vertical"
                        >

                        <TextView
                            style="@style/SimpleTextDBMomentX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="@string/common_string_not_login_title"
                            android:textColor="@color/white"
                            android:textSize="27sp"
                            android:visibility="visible"
                            />

                        <TextView
                            style="@style/SimpleTextDBMomentX.Normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:freezesText="true"
                            android:gravity="center"
                            android:text="@string/message_easy_jj_login"
                            android:textColor="@color/setting_color_text"
                            android:visibility="gone"
                            />

                        <Button
                            android:id="@+id/button_more_login"
                            style="@style/SimpleTextDBMomentX.Normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_border_login_orange_state"
                            android:text="@string/login_title_email"
                            android:textColor="@android:color/black"
                            />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">

                            <com.facebook.login.widget.LoginButton
                                android:id="@+id/login_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>

                            <RelativeLayout
                                android:id="@+id/rl_login_facebook_parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_border_facebook_state"
                                android:onClick="actionLoginWithFacebook"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_facebook_login"
                                        />

                                    <TextView
                                        style="@style/SimpleTextDBMomentX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:freezesText="true"
                                        android:gravity="center"
                                        android:text="@string/common_string_login_facebook"
                                        android:textColor="@color/white"
                                        android:textSize="27sp"/>
                                </LinearLayout>


                            </RelativeLayout>

                            <!--<RelativeLayout-->
                            <!--android:id="@+id/rl_login_facebook_parent"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:background="@drawable/bg_login_facebook"-->
                            <!--&gt;-->

                            <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_centerInParent="true"-->
                            <!--android:orientation="horizontal">-->

                            <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:src="@drawable/ic_facebook_login"-->
                            <!--/>-->

                            <!--<TextView-->
                            <!--style="@style/SimpleTextDBMomentX"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_marginStart="5dp"-->
                            <!--android:freezesText="true"-->
                            <!--android:gravity="center"-->
                            <!--android:text="@string/common_string_login_facebook"-->
                            <!--android:textColor="@color/white"-->
                            <!--android:textSize="27sp"/>-->
                            <!--</LinearLayout>-->


                            <!--</RelativeLayout>-->

                        </FrameLayout>

                        <Button
                            android:id="@+id/button_more_register"
                            style="@style/SimpleTextDBMomentX.Normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@android:color/transparent"
                            android:text="@string/register_title"
                            android:textColor="@android:color/white"
                            />


                    </LinearLayout>
                </LinearLayout>
                v


            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:animateLayoutChanges="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey2"
                />


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey2"
                />

            <RelativeLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_list_setting"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_more_setting"
                    />

                <TextView
                    android:id="@+id/tv_list_setting"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_list_setting"
                    android:gravity="center_vertical"
                    android:text="@string/setting"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:src="@drawable/ic_arrow_right"
                    />
            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey2"
                />

            <RelativeLayout
                android:id="@+id/ll_how_to_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_how_to_use"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_more_how_to_use"
                    />

                <TextView
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_how_to_use"
                    android:gravity="center_vertical"
                    android:text="@string/how_to_use"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:src="@drawable/ic_arrow_right"
                    />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey2"
                />

            <RelativeLayout
                android:id="@+id/ll_about_jatujak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_about_jatujak"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_more_about_jj"
                    />

                <TextView
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_about_jatujak"
                    android:gravity="center_vertical"
                    android:text="@string/about_platinum"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:src="@drawable/ic_arrow_right"
                    />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey2"
                />


            <RelativeLayout
                android:id="@+id/ll_about_jj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/iv_about_jj"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_about_jj"
                    />

                <TextView
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_about_jj"
                    android:gravity="center_vertical"
                    android:text="@string/about_easyjj"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:src="@drawable/ic_arrow_right"
                    />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey2"
                />

            <RelativeLayout
                android:id="@+id/ll_signout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <!--<LinearLayout-->
                <!--android:id="@+id/ll_signout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="1dp"-->
                <!--android:background="@color/white"-->
                <!--android:orientation="horizontal"-->
                <!--&gt;-->

                <ImageView
                    android:id="@+id/iv_logout"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_more_logout"
                    />

                <TextView
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_logout"
                    android:gravity="center_vertical"
                    android:text="@string/sign_out"/>

                <!--</LinearLayout>-->
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey2"
                    />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>