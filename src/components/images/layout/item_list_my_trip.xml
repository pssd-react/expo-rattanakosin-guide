<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        >

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_trip_main"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title_my_trip"
                style="@style/SimpleTextDBMomentXBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/trip_guide"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/txt_value_my_trip"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <android.support.v7.widget.CardView
                android:id="@+id/rl_click_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_trip_color_yellow"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                >


                <TextView
                    android:id="@+id/txt_add_trip"
                    style="@style/SimpleTextDBMomentX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/trip_store_in_trip"
                    android:textSize="20sp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fm_position_sticky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_position_sticky"
            />

            <TextView
                style="@style/SimpleTextDBMomentXBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_create_pin"
                android:textColor="@color/black"
                android:textSize="30sp"/>




    </FrameLayout>


    <TextView
        android:id="@+id/txt_no_trip"
        style="@style/SimpleTextDBMomentX.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/trip_no_trip"
        android:textColor="@color/gray_text"
        android:visibility="gone"/>


    <android.support.v7.widget.CardView
        android:id="@+id/rl_click_trip_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">


        <TextView
            style="@style/SimpleTextDBMomentX.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:text="@string/trip_look_trip"/>

    </android.support.v7.widget.CardView>


</LinearLayout>