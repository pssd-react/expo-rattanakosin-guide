<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dv.dj.talad.th.dv.dj.talad.module.productmerchant.reviewmerchant.writereview.WriteReviewActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_write_review"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_bar">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_review_merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|left"
                    android:paddingRight="20dp"
                    android:src="@drawable/ic_arrow_back_white"/>

                <TextView
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/write_review_txt"/>

                <FrameLayout
                    android:id="@+id/fl_post"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right">

                    <TextView
                        android:id="@+id/tv_post"
                        style="@style/SimpleTextDBMomentX.Normal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/post_txt"
                        android:textColor="@drawable/post_review_state_selection"/>
                </FrameLayout>
            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_below="@+id/appbar_write_review"
        android:id="@+id/fl_write_Review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
