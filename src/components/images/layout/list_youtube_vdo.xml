<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_vdo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/youtube_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_video_play"/>

                <TextView
                    android:id="@+id/txt_vdo_time"
                    style="@style/SimpleTextDBMomentX.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/black_opacity80"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="00:00"
                    android:textColor="@color/white" />

            </FrameLayout>


            <TextView
                android:id="@+id/txt_vdo_title"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:ellipsize="end"
                android:text="@string/vdo_chanel_name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_vdo_detail"
                style="@style/SimpleTextDBMomentX.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/vdo_chanel_name_detail"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_text" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>