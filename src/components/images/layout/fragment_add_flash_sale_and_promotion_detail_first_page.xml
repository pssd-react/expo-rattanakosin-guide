<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="2"
             tools:context="th.co.DigitalVentures.RattanakosinGuide.module.more.managepromotionflashsale.AddFlashSaleAndPromotionDetailFirstPageFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <RelativeLayout
        android:id="@+id/rl_add_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/dotted_border">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_open_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_add_detail"/>
            <TextView
                style="@style/SimpleTextDBMomentX.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray_color_add_photo_view"
                android:text="@string/add_promotion_image"/>
        </LinearLayout>
    </RelativeLayout>

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/img_gallery_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:visibility="gone"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_start_date"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/hint_start_date"
                    android:enabled="false"
                    android:focusable="false"
                    android:textColorHighlight="@color/black"/>

            </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/iv_start_date_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_selector"
                    android:padding="20dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_end_date"
                        style="@style/SimpleTextDBMomentX.Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="@string/hint_end_date"
                        android:enabled="false"
                        android:focusable="false"
                        android:textColorHighlight="@color/black"/>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/iv_end_date_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_selector"
                    android:padding="20dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                style="@style/SimpleTextDBMomentXBold.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/notice"/>
            <TextView
                android:id="@+id/tex_notice"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
