<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_connection_lost"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="th.co.DigitalVentures.RattanakosinGuide.module.splash.NoInternetConnectionActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_no_connection"/>
        <TextView
            style="@style/SimpleTextDBMomentX.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_lost_text"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tap_retry"/>
            <TextView
                style="@style/SimpleTextDBMomentX.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_retry"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
