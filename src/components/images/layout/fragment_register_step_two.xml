<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_register_detail"

    >


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/register_order"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            style="@style/SimpleTextDBMomentX.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/register_title_otp"
            android:textColor="@android:color/black"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bg_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/ll_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/et_number_otp_one"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/et_number_otp_two"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/et_number_otp_tree"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"

                    />

                <EditText
                    android:id="@+id/et_number_otp_four"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"

                    />

                <EditText
                    android:id="@+id/et_number_otp_five"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/et_number_otp_six"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/number_otp"
            style="@style/SimpleTextDBMomentX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_text"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/otp_panel_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/otp_ic_refresh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:paddingTop="2dp"
                android:src="@drawable/ic_refresh_otp_password"/>

            <TextView
                android:id="@+id/otp_txt_refresh"
                style="@style/SimpleTextDBMomentX.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/need_otp_password"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_otp"
            style="@style/SimpleTextDBMomentX.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/violet"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/SimpleTextDBMomentX.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/button_color_grey"
        android:text="@string/register_title_confirm"
        android:textColor="@color/text_color_grey"
        android:visibility="visible"/>


    <RelativeLayout
        android:id="@+id/fm_register_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_info_map"
        android:gravity="center"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_register_success"
            >

            <TextView
                android:id="@+id/txt_register_success"
                style="@style/SimpleTextDBMomentX.Big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/register_success_line_1"/>

            <TextView
                android:id="@+id/txt_detail"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_register_success"
                android:gravity="center_horizontal"
                />

            <FrameLayout
                android:id="@+id/fm_register_coupon"
                android:layout_width="335dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_register_coupon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                        android:id="@+id/img_register_coupon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:src="@drawable/ic_register_human"
                        />



                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/text_use_coupon"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fm_register_coupon"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                />

            <Button
                android:id="@+id/btn_register_success"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_yellow_platinum"
                android:text="@string/register_success_start_app"/>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>