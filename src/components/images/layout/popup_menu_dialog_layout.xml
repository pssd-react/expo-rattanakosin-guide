<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/ic_popup_bg_dialog"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_menu_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_menu_report"
                />

            <TextView
                android:id="@+id/txt_report"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_txt"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_menu_edit"
                />

            <TextView
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_item"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_menu_delete"
                />

            <TextView
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_item"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>