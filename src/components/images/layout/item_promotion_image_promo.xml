<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ll_hilight"
              android:orientation="vertical">

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:id="@+id/imv_image_promo"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title_promotion"
            style="@style/SimpleTextDBMomentX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/tv_detail_promotion"
            style="@style/SimpleTextDBMomentX.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/tv_title_promotion"
            />

        <RelativeLayout
            android:id="@+id/progess_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_promotion">

            <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                android:id="@+id/progress_hilight"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:rcBackgroundColor="@color/grey2"
                app:rcMax="100"
                app:rcProgress="70"
                app:rcProgressColor="@color/yellow_text"
                app:rcRadius="20dp"
                app:rcTextProgress=""
                app:rcTextProgressColor="@color/black"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>