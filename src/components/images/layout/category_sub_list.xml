<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sub_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp">

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:src="@drawable/line_vertical"
            android:background="#E5E5E5"/>

        <TextView
            android:id="@+id/tv_category_sub"
            style="@style/SimpleTextDBMomentX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_sub_category"
        android:orientation="horizontal">

        <View
            android:id="@+id/line_bottom1"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginStart="10dp"
            android:background="#E5E5E5"/>

        <View
            android:id="@+id/line_bottom2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_sub_category"
            android:layout_marginEnd="20dp"
            android:background="#E5E5E5"/>

    </LinearLayout>


</RelativeLayout>