<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/bg_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:background="@drawable/button_redius_otp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            style="@style/SimpleTextDBMomentX.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_password"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_text"/>

        <EditText
            android:id="@+id/et_otp_input"
            android:layout_marginTop="10dp"
            style="@style/SimpleTextDBMomentX.Big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/progress_bar_soon"
            android:maxLength="6"
            android:visibility="gone"
            android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/et_number_otp_one"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:gravity="center"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/et_number_otp_two"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/et_number_otp_tree"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"

                    />

                <EditText
                    android:id="@+id/et_number_otp_four"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"

                    />

                <EditText
                    android:id="@+id/et_number_otp_five"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/et_number_otp_six"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    style="@style/SimpleTextDBMomentX.Normal"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_border"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/number_otp"
            style="@style/SimpleTextDBMomentX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_text"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/otp_panel_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/otp_ic_refresh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:paddingTop="2dp"
                android:src="@drawable/ic_refresh_otp_password"/>

            <TextView
                android:id="@+id/otp_txt_refresh"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/need_otp_password"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            style="@style/SimpleTextDBMomentX.Normal"
            android:id="@+id/tv_time_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/violet"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>