<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_position_sticky_small">

        <TextView
            style="@style/SimpleTextDBMomentXBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/txt_position_sticky"
            android:textSize="30dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_no_pin_list"
            style="@style/SimpleTextDBMomentX.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_no_pin_list"
            android:layout_marginTop="50dp"
            android:textColor="@color/color_text"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:gravity="center_horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_position_sticky"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>

    </FrameLayout>


</LinearLayout>