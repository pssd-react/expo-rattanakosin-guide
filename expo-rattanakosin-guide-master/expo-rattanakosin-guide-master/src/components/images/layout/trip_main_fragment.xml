<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <View
            android:id="@+id/view_space_action_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="gone"/>


        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_bar"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <TextView
                android:id="@+id/tv_app_bar_name"
                style="@style/SimpleTextDBMomentX.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/trip"
                android:textColor="@color/white"/>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <th.co.DigitalVentures.RattanakosinGuide.utility.CustomFontTabLayout
        android:id="@+id/tabtrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabTextAppearance="@style/SimpleTextDBMomentX.Small"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"
        />

    <th.co.DigitalVentures.RattanakosinGuide.utility.NonSwipeableViewPager
        android:id="@+id/vp_trip_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </th.co.DigitalVentures.RattanakosinGuide.utility.NonSwipeableViewPager>

</LinearLayout>